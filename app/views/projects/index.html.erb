<table>
  <tbody>
    <tr>
      <th>Name</th>
      <th>Open Tickets</th>
      <th>Total Tickets</th>
    </tr>
    <% @projects.each do |project| %>
    <tr>
      <td>
        <dl>
          <dt><%= link_to project.name, project_path(project) %></dt>
          <dd><%= project.description %></dd>
        </dl>
      </td>
      <td><%= project.tickets.count {|ticket| ticket.status == 'open'} || 0 %></td>
      <td><%= project.tickets.count %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Project', new_project_path %>